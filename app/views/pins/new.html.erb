<h1>Add a new pin:</h1>

<%= simple_form_for @pin do |form| %>

	<p>
		<%= form.input :title, label: "Enter the title here:" %>
	</p>

	<p>
		<%= form.input :caption, label: "Enter the caption here:" %>
	</p>

	<p>
		<%= form.input :url, label: "Attach a url:" %>
	</p>


	<p>
		<%= form.button :submit %>
	</p>

<% end %>

<%= link_to 'Home', root_path %>
