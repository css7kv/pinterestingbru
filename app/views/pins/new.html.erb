<div align='center'><h1>Add a new pin:</h1></div>

<%= simple_form_for @pin do |form| %>

	<p>
		<%= form.input :title, label: "Enter the title here:" %>
	</p>

	<p>
		<%= form.input :caption, label: "Enter the caption here:" %>
	</p>

	<p>
		<%= form.input :url, label: "Attach a url:" %>
	</p>

	<p>
		<%=form.input :public, as: :boolean, label: "Check box to make public: " do %>
 			 <%= form.check_box :public, {}, "true", "false" %>
		<% end %>
	</p>

	<p>
		<%= form.button :submit %>
	</p>

<% end %>


